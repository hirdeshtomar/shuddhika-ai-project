# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL) - REQUIRED
# Local: postgresql://localhost:5432/shuddhika
# Neon (free): postgresql://user:pass@your-host.neon.tech/shuddhika?sslmode=require
# Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres
DATABASE_URL="postgresql://localhost:5432/shuddhika"

# Redis (OPTIONAL - for background queue processing)
# Leave empty/commented to run without queue system
# Local: redis://localhost:6379
# Upstash (free): rediss://default:xxx@your-host.upstash.io:6379
# REDIS_URL="redis://localhost:6379"

# JWT Authentication - REQUIRED (change this!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# WhatsApp Business API (Meta Cloud API) - Optional for testing
# Get credentials from: https://developers.facebook.com/apps/
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_ACCESS_TOKEN=""
WHATSAPP_BUSINESS_ACCOUNT_ID=""
WHATSAPP_WEBHOOK_VERIFY_TOKEN=""
WHATSAPP_API_URL="https://graph.facebook.com/v18.0"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraper Configuration (Optional)
SCRAPER_PROXY_URL=""
SCRAPER_RATE_LIMIT_MS=2000

# Google Maps API (for lead scraping)
# Get from: https://console.cloud.google.com/ → APIs & Services → Credentials
# Enable "Places API" in the Library
GOOGLE_MAPS_API_KEY=""

# Frontend URL (for CORS in production - set to your Vercel URL)
FRONTEND_URL=""
